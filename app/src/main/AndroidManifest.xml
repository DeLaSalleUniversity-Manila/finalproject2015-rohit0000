<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ph.edu.dlsu.texto" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="23" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/icon2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainSelection"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ListofSavedImages"
            android:label="@string/title_activity_listof_saved_images" >
        </activity>
        <activity
            android:name=".CustomList"
            android:label="@string/title_activity_custom_list" >
        </activity>
        <activity
            android:name=".text_recognition"
            android:label="@string/title_activity_text_recognition" >
        </activity>
        <activity
            android:name=".DisplaySelectedImage"
            android:label="@string/title_activity_display_selected_image" >
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/help" >
        </activity>


    </application>

</manifest>
